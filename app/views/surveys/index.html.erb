<div class="container">

  <div class="questionnaires_<%= action_name %>">

    <h1>

      Surveys

    </h1>

    <hr>

    <% if @surveys.empty? %>

    <p> There are no surveys </p>

    <% else %>

    <p>

      Filter by type:

      <%= render 'survey_label_all' %>

    </p>

    <table class='table table-nonfluid survey-table'>

      <thead>

        <tr>
          <th>Name</th>

          <th>Description</th>

          <th>Questions</th>

          <th>Participants</th>

          <th></th>

        </tr>

      </thead>

      <tbody>

        <%= render partial: 'survey', collection: @surveys %>

      </tbody>

    </table>

    <%= paginate @surveys %>

    <% end %>

  </div>

 <%= link_to "New Survey", new_survey %>
</div>