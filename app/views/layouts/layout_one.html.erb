<link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js" type="text/javascript" charset="utf-8">

</script>
<div class="container">
  <div class="flash">
    <% flash.each do |name, msg| %>
        <div class="alert alert-<%= correct_flash_name(name) %>" role="alert">
          <%= msg %>
        </div>
    <% end %>
  </div>
</div>
<%= yield %>