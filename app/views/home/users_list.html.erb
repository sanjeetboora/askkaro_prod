<style type="text/css">
.usertitle{
  text-align: center;
  color: #2c3e50;
}

/* CONTAINERS */ 

.usercontainer {max-width: 940px; width: 100%; margin: 0 auto; padding-top: 30px;} 
.usertwelve { width: 100%; } 
.usereleven { width: 91.53%; } 
.userten { width: 83.06%; } 
.usernine { width: 74.6%; } 
.usereight { width: 66.13%; } 
.userseven { width: 57.66%; } 
.usersix { width: 49.2%; } 
.userfive { width: 40.73%; } 
.userfour { width: 32.26%;} 
.userthree { width: 23.8%; } 
.usertwo { width: 15.33%; } 
.userone{ width: 6.866%;}

/* COLUMNS */ 

.usercol { 
  display: block; 
  float:left;
  margin: 1% 0 1% 1.6%; 
} 

.usercol:first-of-type { margin-left: 0; }

/* CLEARFIX */ 

.usercf:before, .usercf:after { 
  content: " "; 
  display: table; 
} 

.usercf:after {
  clear: both; 
} 

.usercf { 
  *zoom: 1; 
}

/* PROFILES */

.card{
  max-width: 100%;
  height: 400px;
  background-color: #fff;
  font-family: 'Arimo', sans-serif;
  font-size: 14px;
}


/* CARD 2 */

#usercard2{
  overflow: hidden;
  color: #2c3e50;
  width: 100%;
}

#usercard2 .wrapper{
  padding: 10px;
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
  box-sizing: border-box;
}

#usercard2 .header{
  width: 100%;
  height: 100px;
  position: relative;
  background: #2BC0E4;  /* fallback for old browsers */
background: -webkit-linear-gradient(to right, #EAECC6, #2BC0E4);  /* Chrome 10-25, Safari 5.1-6 */
background: linear-gradient(to right, #EAECC6, #2BC0E4); /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */

}

#usercard2 .header:after{
  content: '';
  background: inherit;
  bottom: 0;
  display: block;
  height: inherit;
  position: absolute;
  left: 0;
  right: 0;
  transform: skewY(-8deg);
  -webkit-transform: skewY(-8deg);
  transform-origin: 100%;
}

#usercard2 .image-wrapper{
  width: 100px;
  height: 100px;
  border-radius: 100%;
  background-image: url("https://static.pexels.com/photos/7097/people-coffee-tea-meeting.jpg");
  background-size: cover;
  background-repeat: no-repeat;
  position: absolute;
  z-index: 5;
  top: 63px;
  left: 50%;
  margin-left: -50px;
}

#usercard2 .name{
  margin-top: 70px;
  text-align: center;
  font-size: 1.50rem;
}

#usercard2 .social .userfour{
  text-align: center;
}

#usercard2 .info{
  margin: 30px 0;
  text-align: center;
}
 #usercard2 .info .userfour{
  text-align: center;
  border-right: 1px solid #2c3e50;
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
  box-sizing: border-box;
}

#usercard2 .info .userfour:last-of-type{
  border-right: none;
}

 #usercard2 .info .userfour .number{
  display: block;
  font-size: 20px;
  padding: 3px 0;
  font-weight: 700;
}
 div#usercard2.card.userfour.usercol div.wrapper div.center span.btn{
background-color: #3498db;
color: #fff;
width: 73px;
padding-left: 1px;
padding-right: 1px;
height: 36px;
padding-top: 2px;
padding-bottom: 2px;
}
div#usercard2.card.userfour.usercol div.wrapper div.center span.btn a{
color: #fff;
font-size: 12px;
}
</style>
<div id="users">
<div class="usercontainer">

 <div class="row usercf">

<% @users.each do |u| %>

    
    <%= render 'user_list', user: u %>

<%end%>

</div>
  </div>
  
</div>
