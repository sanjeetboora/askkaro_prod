<div class="comment">
  <div class="userDetail">
  <%=avatar_for(comment.user,size: 40)%>
    <%= comment.user.name %>
    <br>
    <%= comment.content %>
    <br>
     <%if can? :update,comment%>
    <%= link_to 'Edit', comment %>
    <% end %>.
    <%if can? :destroy,comment%>
    <%= link_to "Delete", comment, method: :delete, data: {confirm: "Are you sure?"}%>
    <% end %>

  </div>
</div>
